<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item>
        <shape>
            <solid android:color="#000000"/>
            <corners android:radius="30dp" />
            <gradient android:endColor="#80f2ff" android:angle="270"/>
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="1dp"
        android:left="1dp">
        <shape>
            <solid android:color="#000000" />
            <corners android:radius="30dp" />
            <gradient android:angle="90" android:startColor="#000000"
                android:centerColor="#000000" android:endColor="#000000"/>
            <stroke
                android:width="1dp"
                android:color="#00E7F5" />
        </shape>
    </item>
</layer-list>